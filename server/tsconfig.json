{
  "compilerOptions": {
      "lib": ["es6"],
    "module": "commonjs",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "outDir": "./build/",
    "target": "es6",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node"
  ]
}